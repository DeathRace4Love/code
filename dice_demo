    Demonstartes using hr dice_roll function from dice_tools.py

"""

from src.utils import dice_tools


def main() -> None:
    print("dice demo ")
    num_dice = int(input("Enter number of dice to roll: ") or 2)
    num_sides = int(input("Enter number of rolls(default 6): or 2"))

    total = dice_tools.roll_dice(num_dice, sides)
    print(f"Total rolls: {num_dice} {sides}-sided dice.")
    print(f"Total: {total}")


if __name__ == "__main__":
    main()

