"""
aUTHER: ETHAN ESPITIA
DESCRIPTION:
     ESTIMATES THE PROBABILITY OF WINNING THE SUM GAME USING MONTE CARLO SIMULATION
     In this game the player rolls three dice and wins if one of the number equals the sum of the other two


"""

from src.utils import dice_tools
from src.utils.dice_tools import roll_dice


def play_wins() -> bool:

    die1 = roll_dice(1)
    die2 = roll_dice(1)
    die3 = roll_dice(1)
    return die1 == die2 + die3 or die2 == die1 + die3 or die3 == die2 + die1




def main() -> None:
    num_games = 10_000_000
    wins = 0

    for _ in range(num_games):
        if play_wins():
            wins += 1
    probability = wins / num_games * 100
    print(f"Probability of winning the sum game: {probability:.5f}%")






if __name__ == "__main__":
    main()
